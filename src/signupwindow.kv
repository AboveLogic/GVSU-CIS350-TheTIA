<SignUpWindow>:
    name:"signup"
    MDCard:
        size_hint: None, None
        size: root.width, root.height
        padding: 25
        spacing: 25
        orientation:'vertical'

        MDLabel:
            id: welcome_label
            text: "Please Enter An Email And A Password"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
        MDLabel:
            id: invalid_email_label
            color: 1,0,0,1
            text: ""
            font_size: 20
            halign: 'center'
            size_hint_y: None
        MDTextFieldRound:
            id:user
            hint_text: "email"
            icon_right: "account"
            size_int_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}

        MDTextFieldRound:
            id:password
            hint_text: "password (must be at least 6 characters)"
            icon_right: "eye-off"
            size_int_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            password: True

        MDRoundFlatButton:
            text: "CREATE ACCOUNT"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_release: app.root.current="main" if root.create_account() else root.clear()

        MDRoundFlatButton:
            text: "CLEAR"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_release: root.clear()

        MDRoundFlatButton:
            text: "BACK"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_release:
                app.root.current = "login"
                root.manager.transition.direction="right"
        MDLabel:
            text: ""
            size_hint_y: None

