<ProfileWindow>:
    name:"profile"
    GridLayout:
        rows:7
        MDLabel:
            id: profile_label
            text: "Smart Strength Profile Editor"
            font_size: 25
            halign: 'center'
            size_hint_y: None
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
        MDLabel:
            id: passwordreset
            text: ""
            font_size: 25
            halign: 'center'
            size_hint_y: None
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
        GridLayout:
            id: profile_info
            size_hint_y: .75
            rows: 4
        MDTextField:
            hint_text: "Edit Bio"
            multiline: True
            mode: "fill"
            fill_color: 0, 0, 0, .4
            id: edit_bio
            pos_hint_y: None
            on_text_validate: root.changeBio()
        AnchorLayout:
            size_hint_y: None
            MDFillRoundFlatButton:
                text: "Reset Password"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_release:
                    root.sendReset()
        AnchorLayout:
            size_hint_y: None
            MDFillRoundFlatButton:
                text: "Save"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_release:
                    root.changeBio()
        AnchorLayout:
            size_hint_y: None
            MDFillRoundFlatButton:
                text: "Exit"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_release:
                    app.root.current="main"; root.manager.transition.direction="right"
                    root.clearText()

