<ProfileWindow>:
    name:"profile"
    MDCard:
        size_hint:None, None
        size: root.width, root.height
        padding: 25
        spacing: 25
        orientation: 'vertical'
        MDLabel:
            id: profile_label
            text: "Smart Strength Profile Editor"
            font_size: 25
            halign: 'center'
            size_hint_y: None
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
        MDLabel:
            id: Email
            text: ""
            font_size: 25
            halign: 'center'
            size_hint_y: None
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
        MDLabel:
            id: bio
            text: ""
            font_size: 25
            halign: 'center'
            size_hint_y: None
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
        MDLabel:
            id: passwordreset
            text: ""
            font_size: 25
            halign: 'center'
            size_hint_y: None
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
        MDRoundFlatButton:
            text: "Reset Password"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_release:
                root.sendReset()
        MDRoundFlatButton:
            text: "Edit Bio"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_release:
        MDRoundFlatButton:
            text: "Exit and Save Changes"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_release:
                app.root.current="main"; root.manager.transition.direction="right"
                root.clearText()

