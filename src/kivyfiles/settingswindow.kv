<SettingsWindow>:
    name:"settings"
    GridLayout:
        rows:5
        MDLabel:
            id: profile_label
            text: "Your Smart Strength Settings"
            font_size: 25
            halign: 'center'
            size_hint_y: None
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
        MDLabel:
            id: spacing
            text: ""
            font_size: 2
            halign: 'center'
            size_hint_y: None
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

        AnchorLayout:
            size_hint_y: None
            MDFillRoundFlatButton:
                text: "Set Dark Mode"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_release:
                    app.theme_cls.theme_style = "Dark"
                    root.changeColor("Dark")

        AnchorLayout:
            size_hint_y: None
            MDFillRoundFlatButton:
                text: "Set Light Mode"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_release:
                    app.theme_cls.theme_style = "Light"
                    root.changeColor("Light")
        AnchorLayout:
            size_hint_y: None
            MDFillRoundFlatButton:
                text: "Exit and Save Changes"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_release:
                    app.root.current="main"; root.manager.transition.direction="left"
