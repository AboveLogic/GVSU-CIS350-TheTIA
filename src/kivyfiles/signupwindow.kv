<SignUpWindow>:
    name:"signup"
    MDCard:
        size_hint: None, None
        size: root.width, root.height
        padding: 25
        spacing: 25
        orientation:'vertical'
        MDLabel:
            id: welcome_label
            text: "Please Enter An Email And A Password"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            pos_hint: {"center_x": 0.5, "top": 1}
        MDLabel:
            id: invalid_email_label
            color: 1,0,0,1
            text: ""
            font_size: 20
            halign: 'center'
            size_hint_y: None
        MDTextField:
            hint_text: "Fill mode"
            mode: "fill"
            fill_color: 0, 0, 0, .4
            id:user
            write_tab: False
            hint_text: "email"
            icon_right: "account"
            size_int_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
        MDTextField:
            hint_text: "Fill mode"
            mode: "fill"
            fill_color: 0, 0, 0, .4
            id:password
            write_tab: False
            hint_text: "password (must be at least 6 characters)"
            icon_right: "eye-off"
            size_int_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            password: True

        MDTextField:
            hint_text: "Fill mode"
            mode: "fill"
            fill_color: 0, 0, 0, .4
            id:bio
            write_tab: False
            multiline: True
            hint_text: "Enter your bio here! A short description of yourself and your hobbies."
            size_int_x: None
            size_hint_y: None
            width: 200
            height: 10000000
            max_text_length: 350
            font_size: 14
            pos_hint: {"center_x": 0.5}

        MDFillRoundFlatButton:
            text: "CREATE ACCOUNT"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_release:
                app.root.current="main" if root.create_account() else "signup"
                root.clear()

        MDFillRoundFlatButton:
            text: "CLEAR"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_release: root.clear()

        MDFillRoundFlatButton:
            text: "BACK"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_release:
                app.root.current = "login"
                root.manager.transition.direction="right"

